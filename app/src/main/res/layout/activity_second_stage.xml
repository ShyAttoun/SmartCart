<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mySecondFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartcart.www.smartcart.Screens.SecondStage"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#1981ff"
        android:gravity="center"
        android:padding="5dp"
        android:text="בחר אזור"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
       />

    <Spinner
        android:id="@+id/spinnerRegion"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/region"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/chain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:background="#1981ff"
        android:gravity="center"
        android:padding="5dp"
        android:text="בחר רשת"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
        />

    <Spinner
        android:id="@+id/spinnerChain"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/chain"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnSaveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#0bab6b"
        android:padding="8dp"
        android:text="@string/lets_start"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
       />


</RelativeLayout>
