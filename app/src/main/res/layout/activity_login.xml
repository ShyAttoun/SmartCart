<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartbackground"
    tools:context="com.smartcart.www.smartcart.Screens.LoginActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Login_icon"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/cartlogonewest" />

    <ImageButton
        android:id="@+id/google_signin_button"
        android:layout_width="248dp"
        android:layout_height="52dp"
        android:layout_below="@+id/Login_icon"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/googlesigninnew" />



    <ImageButton
    android:id="@+id/ibFBLognin"
    android:layout_width="248dp"
    android:layout_height="52dp"
    android:layout_below="@+id/google_signin_button"
    android:layout_marginTop="16dp"
    android:adjustViewBounds="true"
    android:backgroundTint="@android:color/transparent"
    android:layout_centerHorizontal="true"
    android:scaleType="centerCrop"
    android:src="@drawable/layerfb"/>


        <EditText
            android:id="@+id/login_email"
            android:layout_width="384dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/ibFBLognin"
            android:layout_marginTop="30dp"
            android:background="#64ffffff"
            android:textSize="20sp"
            android:drawableStart="@drawable/email"
            android:hint="אימייל"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="384dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/login_email"
            android:layout_marginTop="8dp"
            android:background="#64ffffff"
            android:drawableStart="@drawable/password"
            android:textSize="20sp"
            android:hint="סיסמה"
            android:gravity="start"
            android:inputType="textPassword"
            android:padding="10dp"
            tools:targetApi="o" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_password"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:background="#515151"
            android:text="כניסה"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/register_account_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:gravity="center"
            android:text="אין לך שם משתמש? הירשם כאן!"
            android:textAlignment="center"
            android:background="#000000"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />





    </RelativeLayout>

